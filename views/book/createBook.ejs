<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Book</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Add New Book</h1>
    <form action="/books" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control <% if (errorObj.title) { %>is-invalid<% } %>"  id="title" name="title" value="<%= oldInput?.title || '' %>" />
        <% if (errorObj.title) { %>
          <div class="invalid-feedback">
            <%= errorObj.title %>
          </div>
        <% } %>
      </div>
      <div class="mb-3">
        <label for="genre_id" class="form-label">Genre</label>
        <select class="form-select <% if (errorObj.genre_id) { %>is-invalid<% } %>" id="genre_id" name="genre_id" >
          <option value="" disabled selected>Select a genre</option>
          <% genres.forEach(genre => { %>
            <option value="<%= genre.id %>"><%= genre.name %></option>
          <% }) %>
        </select>
        <% if (errorObj.genre_id) { %>
          <div class="invalid-feedback">
            <%= errorObj.genre_id %>
          </div>
        <% } %>
      </div>
      <div class="mb-3">
        <label for="author" class="form-label">Author</label>
        <input type="text" class="form-control <% if (errorObj.author) { %>is-invalid<% } %>" name="author" id="author" value="<%= oldInput?.author || '' %>" />
        <% if (errorObj.author) { %>
          <div class="invalid-feedback">
            <%= errorObj.author %>
          </div>
        <% } %>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="text" class="form-control <% if (errorObj.price) { %>is-invalid<% } %>" name="price" id="price" value="<%= oldInput?.price || '' %>" />
        <% if (errorObj.price) { %>
          <div class="invalid-feedback">
            <%= errorObj.price %>
          </div>
        <% } %>
      </div>
      <button type="submit" class="btn btn-primary">Add Book</button>
      <a href="/books" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
</body>
</html>