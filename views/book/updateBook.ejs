<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Book</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Edit Book</h1>
    <form action="/books/<%= oldInput?.id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control <% if (errorObj.title) { %>is-invalid<% } %>" id="title" name="title" value="<%= oldInput?.title || '' %>" >
        <% if (errorObj.title) { %>
          <div class="invalid-feedback">
            <%= errorObj.title %>
          </div>
        <% } %>
      </div>
      <div class="mb-3">
        <label for="author" class="form-label">Author</label>
        <input type="text" class="form-control <% if (errorObj.author) { %>is-invalid<% } %>" id="author" name="author" value="<%= oldInput?.author || '' %>" >
        <% if (errorObj.author) { %>
          <div class="invalid-feedback">
            <%= errorObj.author %>
          </div>
        <% } %>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" step="0.01" class="form-control <% if (errorObj.price) { %>is-invalid<% } %>" id="price" name="price" value="<%= oldInput?.price || '' %>" >
        <% if (errorObj.price) { %>
          <div class="invalid-feedback">
            <%= errorObj.price %>
          </div>
        <% } %>
      </div>
      <div class="mb-3">
        <label for="genre_id" class="form-label">Genre</label>
        <select class="form-select" id="genre_id" name="genre_id" >
          <% genres.forEach(genre => { %>
            <option value="<%= genre.id %>" <%= oldInput?.price === genre.id ? 'selected' : '' %>><%= genre.name %></option>
          <% }) %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Update Book</button>
      <a href="/books" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
</body>
</html>